{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "jsx": "preserve",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "resolveJsonModule": true,
      "allowJs": false,
      "noEmit": true,
      "strict": true,
      "baseUrl": ".",
      "paths": { "@/*": ["src/*"] }
    },
    "include": ["next-env.d.ts", "src/**/*", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
  }
  